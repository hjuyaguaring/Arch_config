<?xml version="1.0"?>
<openbox_menu>
  <menu id="root-menu" label="Power Menu">
    <item label="Shutdown">
      <action name="Execute">
        <command>systemctl poweroff</command>
      </action>
    </item>
    <item label="Restart">
      <action name="Execute">
        <command>systemctl reboot</command>
      </action>
    </item>
    <item label="Suspend">
      <action name="Execute">
        <command>systemctl suspend</command>
      </action>
    </item>
    <item label="Logout">
      <action name="Execute">
        <command>hyprctl dispatch exit</command>
      </action>
    </item>
    <item label="Lock">
      <action name="Execute">
        <command>swaylock</command>
      </action>
    </item>
  </menu>
</openbox_menu>
